{{!-- new.handlebars --}}
<div class="container">
  <form method="POST" action="/restaurants">
    <div class="mb-3">
      <label for="name" class="form-label">
        店名
      </label>
      <input type="text" name="name" class="form-control" id="name" required>
    </div>

    <div class="mb-3">
      <label for="name_en" class="form-label">
        英文店名
      </label>
      <input type="text" name="name_en" class="form-control" id="name_en" required>
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">
        分類
      </label>
      <input type="text" name="category" class="form-control" id="category" list="categoryOptions">
      {{! 使用datalist，讓使用者可選擇或自行輸入 }}
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>

<div class="mb-3">
  <label for="image" class="form-label">圖片連結</label>
  <input type="url" class="form-control" id="image" name="image" required />
</div>

    <div class="mb-3">
      <label for="location" class="form-label">
        地址
      </label>
      <input type="text" name="location" class="form-control" id="location" required>
    </div>

    <div class="mb-3">
      <label for="phone" class="form-label">
        電話
      </label>
      <input type="tel" name="phone" class="form-control" id="phone" required>
    </div>

    <div class="mb-3">
      <label for="google_map" class="form-label">
        Google地圖連結
      </label>
      <input type="url" name="google_map" class="form-control" id="google_map" required>
    </div>

    <div class="mb-3">
      <label for="rating" class="form-label">
        評分
      </label>
      <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1" required>

      <div class="mb-3">
        <label for="description" class="form-label">敘述</label>
        <textarea class="form-control" id="description" rows="3" name="description" required></textarea>
      </div>
    </div>
    <button class="btn btn-success" type="submit">新增餐廳</button>
  </form>
</div>